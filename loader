#!/usr/bin/env bash

function main() {
    rm -RfI ~/.dotfiles
    rsync -a . ~/.dotfiles

    pushd ~
    for file in .dotfiles/.*; do
        basename="$(basename "$file")"
        if [ "$basename" = '.' -o "$basename" =  '..' ]; then continue; fi

        rm "$(basename "$file")"
        ln -s "$file" .
    done
    popd
}

main
