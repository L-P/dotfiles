#!/usr/bin/env sh
# This script is the very first thing that runs on my machine after installing
# a fresh Debian without any DE.

set -eux

TARGET_USER=lpeltier

_main() {
    if [ "$(id -u)" -eq 0 ]; then
        _main_root
        su "$TARGET_USER" -c "$0"
    else
        _main_user
    fi
}

_main_user() {
    _init_checks_user
    _install_dotfiles
    _install_golang_bins

    systemctl --user enable syncthing
    "$HOME/.bin/get_firefox"
}

_install_golang_bins() {
    GO="/opt/go/bin/go"
    "$GO" get golang.org/x/tools/cmd/goimports
    curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- -b "$("$GO" env GOPATH)/bin"
}

_install_dotfiles() {
    cwd="$(pwd)"
    dir="$HOME/.dotfiles"

    rm -rf "$dir"

    git clone https://github.com/L-P/dotfiles "$dir"
    cd "$dir"
    git submodule update --init --recursive

    cd "$HOME"
    for f in $(find .dotfiles -maxdepth 1 -name ".*"); do
        if [ "$f" = "." ] || [ "$f" = ".dotfiles" ] || [ "$f" = ".git" ]; then
            continue
        fi

        ln -s -f "$f" .
    done

    cd "$HOME/.dotfiles/.vim/bundle/cpsm"
    PY3=ON ./install.sh

    touch "$HOME/.zsh_local" "$HOME/.bash_local"

    cd "$cwd"
}

_init_checks_user() {
    if [ "$(id -u)" -eq 0 ]; then
        echo "this script needs to run as a regular user" 1>&2
        exit 1
    fi

    # random executable as canary
    if ! command -v jq 2> /dev/null; then
        echo "you need to run the script as root first" 1>&2
        exit 1
    fi
}

_main_root() {
    _init_checks_root

    _setup_apt_sources
    apt upgrade -y

    _install_cli
    _install_desktop
    _install_golang

    ufw default deny
    ufw allow syncthing
    ufw enable

    # Disable maddening and downright dangerous automagic volume adjustement bullshit.
    # See https://www.reddit.com/r/linux/comments/2rjiaa/horrible_decisions_flat_volumes_in_pulseaudio_a/
    # and https://bugs.debian.org/cgi-bin/bugreport.cgi?bug=674936
    # Thanks u/GaianNeuron for introducing me to Destiny Potato and to this fix.
    sed -i '/^flat-volumes/d' '/etc/pulse/daemon.conf'
    echo 'flat-volumes = no' >> "/etc/pulse/daemon.conf"

    # Use local unbound DNS.
    sed -i '/^supersede domain-name-servers/d' '/etc/dhcp/dhclient.conf'
    echo 'supersede domain-name-servers 127.0.0.1;' >> "/etc/dhcp/dhclient.conf"
    sed -i '/^supersede domain-name-servers/d' '/etc/wicd/dhclient.conf.template'
    echo 'supersede domain-name-servers 127.0.0.1;' >> '/etc/wicd/dhclient.conf.template'
}

_install_golang() {
    cwd=$(pwd)
    cd "/opt"
    rm -rf "/opt/go"
    version="$(curl -s https://golang.org/VERSION?m=text)"
    curl -s "https://dl.google.com/go/$version.linux-amd64.tar.gz" | tar xz
    cd "$cwd"
}

_install_cli() {
    # Base CLI
    apt install -y \
        curl git htop jq moreutils ncdu rsync tmux tree unzip vim zsh

    # Development tools
    apt install -y \
        build-essential clang clang-format clang-tidy cmake docker-compose \
        docker.io gdb libboost-all-dev make ninja-build shellcheck \
        universal-ctags valgrind yamllint

    # Misc
    apt install -y \
        composer dnsutils dos2unix ffmpeg flac git-crypt gnuplot graphviz \
        hledger httpie imagemagick makeself mariadb-client mat2 mtr-tiny \
        nmap optipng pandoc php-cli php-gd php-mysql php-xml php-zip pv \
        qrencode sqlite3 texlive-latex-base texlive-latex-extra \
        texlive-latex-recommended ufw units whois woof

    update-alternatives --set editor /usr/bin/vim.basic
    chsh -s "$(command -v zsh)" "$TARGET_USER"
}

_install_desktop() {
    # Base desktop
    apt install -y \
        i3 i3blocks lightdm dunst pavucontrol pulseaudio fonts-inconsolata \
        firmware-iwlwifi unbound nomacs evince lxterminal pcmanfm scrot \
        x11-xserver-utils xclip xwallpaper pasystray paprefs wicd-gtk

    # Rest of the world, the big apps.
    apt install -y \
        chromium libreoffice syncthing gimp gimp-plugin-registry gimp-python \
        gnome-disk-utility gparted gtk-redshift inkscape mpv wireshark \
        keepassxc gucharmap

    update-alternatives --set x-terminal-emulator /usr/bin/lxterminal
}

_setup_apt_sources() {
    dst="/etc/apt/sources.list.d/${TARGET_USER}.list"
    rm -f "$dst" # for idempotence

    apt update
    apt install -y gnupg # required for apt-key

    # non-free required for iwlwifi
    echo "deb http://deb.debian.org/debian/ $(lsb_release -sc) non-free" > "$dst"

    _install_syncthing_pgp_key
    echo "deb https://apt.syncthing.net/ syncthing stable" >> "$dst"

    apt update
}

