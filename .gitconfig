[alias]
    ci = commit
    co = checkout
    fix = commit --amend --no-edit -a
    grall = log --graph --oneline --decorate --all
    graph = log --graph --oneline --decorate
    mergeable = branch -avv --contains HEAD --no-merged
    upcoming = !git graph ..origin/HEAD

[color]
    branch = auto
    diff = auto
    interactive = auto
    log = auto
    pager = true
    status = auto

[core]
    excludesfile = ~/.gitignore
    pager = less -RFXS -x4

[push]
    default = simple

[user]
    email = contact@leo-peltier.fr
    name = LÃ©o Peltier

[advice]
    pushNonFastForward = false
    statusHints = false
    commitBeforeMerge = false
    resolveConflict = false
    detachedHead = false
